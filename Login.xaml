<UserControl x:Class="ClaimDesk.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="Login to ClaimDesk" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameBox" Height="30"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>
            <Button Content="Login" Height="35" Click="Login_Click"/>
            <TextBlock Text="Forgot Password?" Foreground="Blue" Cursor="Hand" HorizontalAlignment="Center" MouseLeftButtonUp="ForgotPassword_Click" />
            <TextBlock Text="Don't have an account? Sign Up" Foreground="Blue" Cursor="Hand" Height="34" HorizontalAlignment="Center" MouseLeftButtonUp="SignUp_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
