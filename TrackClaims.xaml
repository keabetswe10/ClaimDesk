<UserControl x:Class="ClaimDesk.TrackClaims"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Background="#2C3E50" >
            <TextBlock Text="📑 Track Claims" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <!-- Claims List -->
        <Border Grid.Row="1" Margin="40" Background="White" Padding="20" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Your Claims" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <DataGrid x:Name="dgClaims" AutoGenerateColumns="False" HeadersVisibility="Column"
                          CanUserAddRows="False" IsReadOnly="True" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="*"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Back button -->
                <Button Content="⬅ Back to Dashboard" 
                        Width="160" Height="35" Margin="0,20,0,0"
                        Background="#2C3E50" Foreground="White"
                        HorizontalAlignment="Left"
                        Click="BackToDashboard_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
