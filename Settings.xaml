<UserControl x:Class="ClaimDesk.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA" Margin="16">
        <StackPanel>
            <Button Content="Back to Dashboard" Height="36" Width="180" Margin="0,0,0,16" Click="BackToDashboard_Click"/>

            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,12"/>

            <StackPanel Margin="0,8,0,0">
                <TextBlock Text="Change Password" FontWeight="Bold"/>
                <Button Content="Change Password" Width="200" Height="30" Margin="0,4,0,12"/>

                <TextBlock Text="Notifications" FontWeight="Bold"/>
                <CheckBox Content="Enable Notifications" Margin="0,4,0,12"/>

                <TextBlock Text="Security Checks" FontWeight="Bold"/>
                <Button Content="Run Security Check" Width="200" Height="30" Margin="0,4,0,12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
