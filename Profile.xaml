<UserControl x:Class="ClaimDesk.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA" Margin="16">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" >

            <TextBlock Text="Edit Profile" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Profile Picture -->
            <Border Width="100" Height="100" Background="Gray" CornerRadius="50" HorizontalAlignment="Center">
                <TextBlock Text="P" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="32"/>
            </Border>
            <Button Content="Change Profile Picture" Width="200" HorizontalAlignment="Center"/>

            <!-- Nickname -->
            <TextBlock Text="Nickname"/>
            <TextBox x:Name="NicknameBox" Height="30"/>

            <!-- Status -->
            <TextBlock Text="Status"/>
            <TextBox x:Name="StatusBox" Height="30"/>

            <!-- Save & Back -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="0,20,0,0">
                <Button Content="Save" Width="100" Click="Save_Click"/>
                <Button Content="Back to Dashboard" Width="150" Click="BackToDashboard_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
