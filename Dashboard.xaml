<UserControl x:Class="ClaimDesk.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F6FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Brand -->
                <StackPanel Margin="16" Grid.Row="0">
                    <TextBlock Text="ClaimDesk"
                               Foreground="White"
                               FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Contract Monthly Claims"
                               Foreground="#D0D7DE"
                               FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Nav buttons -->
                <StackPanel Grid.Row="1" Margin="12,8,12,8">
                    <Button Content="➕  Add Claim"
                            Height="36" Margin="0,6,0,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#415A77"
                            Click="AddClaim_Click"/>
                    <Button Content="📑  Track Claims"
                            Height="36" Margin="0,6,0,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#415A77"
                             Click="TrackClaims_Click"/>
                    <Button Content="✅  Approve Claims"
        Height="36" Margin="0,6,0,0"
        Background="Transparent"
        Foreground="White"
        BorderBrush="#415A77"
        Click="ApproveClaims_Click"/>
                    <Button Content="👤  Profile"
                            Height="36" Margin="0,6,0,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#415A77"
                            Click="Profile_Click"/>
                    <Button Content="⚙  Settings"
                            Height="36" Margin="0,6,0,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#415A77"
                            Click="Settings_Click"/>
                </StackPanel>

                <!-- Logout -->
                <StackPanel Grid.Row="2" Margin="12,0,12,16">
                    <Separator Margin="0,8,0,8" Background="#415A77" Height="1"/>
                    <Button Content="🔒  Logout"
                            Height="36"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#415A77"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1" Background="White" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Margin="8" VerticalAlignment="Top">
                <!-- User Profile Card -->
                <Border Background="#2C3E50" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                    <StackPanel HorizontalAlignment="Center">
                        <Ellipse Width="60" Height="60" Fill="Gray"/>
                        <TextBlock Text="Keabetswe Malwa" Foreground="White" FontWeight="Bold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                        <TextBlock Text="KeabetsweMalwa@email.com" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                        <TextBlock Text="Last Login: Today 09:45" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Claims Overview -->
                <Border Background="White" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Claims Overview" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                        <TextBlock Text="Total Claims: 12" Margin="0,2,0,0"/>
                        <TextBlock Text="Approved: 7" Margin="0,2,0,0"/>
                        <TextBlock Text="Pending: 4" Margin="0,2,0,0"/>
                        <TextBlock Text="Rejected: 1" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1" Margin="8" VerticalAlignment="Top">
                <!-- Statistics -->
                <Border Background="White" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Statistics" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="This Month: 6 Claims" Margin="0,8,0,0"/>
                        <TextBlock Text="Approved: 4" Margin="0,4,0,0"/>
                        <TextBlock Text="Average Approval Time: 2 days" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pending Approvals -->
                <Border Background="White" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Pending Approvals (Manager)" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="Claim #1242 – Awaiting Approval" Margin="0,8,0,0"/>
                        <TextBlock Text="Claim #1245 – Review Supporting Docs" Margin="0,4,0,0"/>
                        <TextBlock Text="Claim #1248 – Decision Needed" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
