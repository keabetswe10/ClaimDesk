<UserControl x:Class="ClaimDesk.AddClaim"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Background="#2C3E50" >
            <TextBlock Text="➕ Add New Claim" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <!-- Claim Form -->
        <StackPanel Grid.Row="1" Margin="40" Background="White"  VerticalAlignment="Top">
            <TextBlock Text="Fill Claim Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Claim Title -->
            <TextBlock Text="Claim Title:" FontWeight="Bold"/>
            <TextBox x:Name="txtTitle" Margin="0,5,0,15" Height="30"/>

            <!-- Claim Amount -->
            <TextBlock Text="Amount:" FontWeight="Bold"/>
            <TextBox x:Name="txtAmount" Margin="0,5,0,15" Height="30"/>

            <!-- Claim Date -->
            <TextBlock Text="Date:" FontWeight="Bold"/>
            <DatePicker x:Name="dateClaim" Margin="0,5,0,15" Height="30"/>

            <!-- Claim Description -->
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <TextBox x:Name="txtDescription" Margin="0,5,0,15" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

            <!-- Upload Supporting Document -->
            <TextBlock Text="Upload Supporting Document:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                <TextBox x:Name="txtFilePath" Width="400" Height="30" IsReadOnly="True" Text="(No file selected)"/>
                <Button Content="Browse..." Width="100" Height="30" Margin="10,0,0,0"
                        Background="#34495E" Foreground="White"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="⬅ Back to Dashboard" 
                        Width="160" Height="35" Margin="0,0,10,0"
                        Background="#95A5A6" Foreground="White"
                        Click="BackToDashboard_Click"/>
                <Button Content="Submit Claim" 
                        Width="140" Height="35"
                        Background="#2C3E50" Foreground="White"/>
                <!-- Disabled until backend -->
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
