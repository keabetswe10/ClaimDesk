<UserControl x:Class="ClaimDesk.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Sign Up for ClaimDesk" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Full Name"/>
            <TextBox x:Name="FullNameBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Sign Up" Height="35" Click="SignUp_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Already have an account? Login" Foreground="Blue" Cursor="Hand" MouseLeftButtonUp="BackToLogin_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
