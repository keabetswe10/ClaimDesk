<UserControl x:Class="ClaimDesk.ForgotPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClaimDesk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F6FA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Forgot Password" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,10"/>

            <Button Content="Reset Password" Height="35" Click="ResetPassword_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Back to Login" Foreground="Blue" Cursor="Hand" MouseLeftButtonUp="BackToLogin_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
