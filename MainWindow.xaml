<Window x:Class="ClaimDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#F5F6FA">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to ClaimDesk" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Get Started" Width="150" Height="40" Click="GetStarted_Click" Margin="0,0,0,20"/>
           
        </StackPanel>
        <ContentControl x:Name="MainContent"/>
    </Grid>
</Window>
